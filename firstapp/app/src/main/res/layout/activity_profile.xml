<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Tonyimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/tony_stark" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony stark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/Tonyimage"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@gmail.com"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/Tonyimage"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:text="+91 9054700991"
        android:id="@+id/mobilenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/Tonyimage"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tonyimage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#0094ea"
        android:padding="10dp"
        android:text="MORE INFORMATION" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:textColor="#ffffff"
        android:background="#FF0000"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>